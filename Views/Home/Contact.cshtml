@{
    ViewBag.Title = "Contacto";
}

<div class="contact_form">
<h1 class="text-center f-title" >@ViewBag.Title</h1>

    <div class="formulario">      
        <h3 class="text-center">Escríbenos y en breve los pondremos en contacto contigo</h3>


          <form action="submeter-formulario.php" method="post" class="centrado">       

            
                <p>
                  <label for="nombre" class="my-label">Nombre
                    <span class="my-span">*</span>
                  </label>
                    <input type="text" name="introducir_nombre" id="nombre" required="obligatorio" placeholder="Escribe tu nombre"
                    class="my-input">
                </p>
              
                <p>
                  <label for="email" class="my-label">Email
                    <span class="my-span">*</span>
                  </label>
                    <input type="email" name="introducir_email" id="email" required="obligatorio" placeholder="Escribe tu Email"
                    class="my-input">
                </p>
            
                <p>
                  <label for="telefone" class="my-label">Teléfono
                  </label>
                    <input type="tel" name="introducir_telefono" id="telefono" placeholder="Escribe tu teléfono"
                    class="my-input">
                </p>    
              
                <p>
                  <label for="website" class="my-label">Sitio web
                  </label>
                    <input type="url" name="introducir_website" id="website" placeholder="Escribe la URL de tu web"
                    class="my-input">
                </p>    
              
                <p>
                  <label for="asunto" class="my-label">Asunto
                    <span class="my-span">*</span>
                  </label>
                    <input type="text" name="introducir_asunto" id="assunto" required="obligatorio" placeholder="Escribe un asunto"
                    class="my-input">
                </p>    
              
                <p>
                  <label for="mensaje" class="my-label">Mensaje
                    <span class="my-span">*</span>
                  </label>                     
                                    <textarea name="introducir_mensaje" class="texto_mensaje my-textarea" id="mensaje" required="obligatorio" placeholder="Deja aquí tu comentario..."></textarea> 
                                </p>                    
              
                <button type="submit" name="enviar_formulario" id="enviar" class="my-button"><p>Enviar</p></button>

                <p class="aviso">
                  <span class="obligatorio my-span"> * </span>los campos son obligatorios.
                </p>          
            
          </form>
    </div>  
  </div>
